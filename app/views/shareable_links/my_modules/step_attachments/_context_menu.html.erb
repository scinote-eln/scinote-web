      <%= link_to shared_asset_download_path(@shareable_link.uuid, asset), class: '!px-3 !py-2.5 hover:!bg-sn-super-light-blue !text-sn-blue', data: { turbolinks: false } do %>
        <%= t('Download') %>
      <% end %>
    </li>
  </ul>
</div>
