<div class="modal" id="confirm-link-update-modal" tabindex="-1" role="dialog" aria-labelledby="confirm-link-update-modal-label">
  <div class="modal-dialog" role="document">
    <div class="modal-content" data-e2e="e2e-MD-task-protocol-updateRevertFromTemplates">
      <div class="modal-header">
        <button
          type="button"
          class="close"
          data-dismiss="modal"
          aria-label="Close"
          data-e2e="e2e-BT-task-protocol-updateRevertFromTemplatesModal-close"
        >
          <i class="sn-icon sn-icon-close"></i>
        </button>
        <h4
          class="modal-title"
          id="confirm-link-update-modal-label"
          data-e2e="e2e-TX-task-protocol-updateRevertFromTemplatesModal-title"
        ></h4>
      </div>
      <div class="modal-body">
        <p><%= t("my_modules.protocols.confirm_link_update_modal.description", steps_count: @my_module.steps.count, results_count: @my_module.results.count, rows_count: @my_module.my_module_repository_rows.count) %></p>
        <p class="message" data-e2e="e2e-TX-task-protocol-updateRevertFromTemplates-description"></p>
        <div class="flex gap-2 mb-2 load-options-container">
          <div class="sci-radio-container shrink-0 mt-0.5">
            <input type="radio" name="load_option" value="merge" class="sci-radio" checked>
            <span class="sci-radio-label"></span>
          </div>
          <label class="merge-label sci-label !my-0"></label>
        </div>
        <div class="flex gap-2 mb-6 load-options-container">
          <div class="sci-radio-container shrink-0 mt-0.5">
            <input type="radio" name="load_option" value="replace" class="sci-radio">
            <span class="sci-radio-label"></span>
          </div>
          <label class="replace-label sci-label !my-0"></label>
        </div>
        <p class="warning" data-e2e="e2e-TX-task-protocol-updateRevertFromTemplates-warning">
          <%= t('my_modules.protocols.confirm_link_update_modal.warning_html') %>
        </p>
      </div>
      <div class="modal-footer">
        <button
          type="button"
          class="btn btn-secondary"
          data-dismiss="modal"
          data-e2e="e2e-BT-task-protocol-updateRevertFromTemplatesModal-cancel">
            <%= t("general.cancel") %>
        </button>
        <button
          type="button"
          class="btn btn-danger"
          data-action="submit"
          data-e2e="e2e-BT-task-protocol-updateRevertFromTemplatesModal-confirm"
        ></button>
      </div>
    </div>
  </div>
</div>
