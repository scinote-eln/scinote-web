<div  class="mb-8">
  <h1>Datepicker</h1>
  <div id="datepickers" class="flex items-center gap-4 flex-wrap">
    <div class="w-64">
      <label>Simple datepicker</label>
      <date-time-picker placeholder="Select a date"></date-time-picker>
    </div>
    <div class="w-64">
      <label>Only date datepicker</label>
      <date-time-picker mode="date" placeholder="Select a date"></date-time-picker>
    </div>
    <div class="w-64">
      <label>Only time datepicker</label>
      <date-time-picker mode="time" placeholder="Select a time"></date-time-picker>
    </div>
  </div>
</div>

<%= javascript_include_tag 'vue_design_system_datepicker' %>
