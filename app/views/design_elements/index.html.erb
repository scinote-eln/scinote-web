<%
  icons_list = []
  icons_file = File.join(Rails.root, 'vendor', 'assets', 'stylesheets', 'sn-icon-font.css')
  File.open(icons_file, 'r') do |f|
    f.each_line do |line|
      if line.match(/sn-icon-([a-z0-9-]+):before/)
        icons_list << $1
      end
    end
  end

  colors_list = []
  tailwind_file = File.join(Rails.root, 'config', 'tailwind.config.js')
  File.open(tailwind_file, 'r') do |f|
    f.each_line do |line|
      if line.match(/['"]?(sn-[a-z0-9-]+)['"]?\s*:\s*['"]?([#a-zA-Z0-9]+)['"]?/)
        colors_list << { name: $1, value: $2 } if $2.include?('#')
      end
    end
  end
%>

<%= render partial: 'colors', locals: {colors_list: colors_list} %>

