<% if edit_supported %>
  <%= link_to edit_asset_url(id: asset),
          id: 'wopi_file_edit_button',
          class: 'btn btn-light',
          target: '_blank' do %>
    <i class="sn-icon sn-icon-<%= sn_icon_for(asset) %>"></i>
    <%= wopi_button_text(asset, 'edit') %>
  <% end %>
<% else %>
  <%= content_tag :button, '',
          id: 'wopi_file_edit_button',
          class: 'btn btn-light  cursor-not-allowed',
          style: "pointer-events: all;",
          target: '_blank',
          title: title,
          disabled: true do %>
    <i class="sn-icon sn-icon-<%= sn_icon_for(asset) %>"></i>
    <%= wopi_button_text(asset, 'edit') %>
  <% end %>
<% end %>
