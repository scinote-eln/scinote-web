<% if edit_supported %>
  <%= link_to edit_asset_url(id: asset),
          id: 'wopi_file_edit_button',
          class: 'btn btn-light',
          target: '_blank' do %>
    <%= file_application_icon(asset) %>
    <%= wopi_button_text(asset, 'edit') %>
  <% end %>
<% else %>
  <%= content_tag :div, '',
          id: 'wopi_file_edit_button',
          class: 'btn btn-light',
          target: '_blank',
          title: title,
          disabled: true do %>
    <%= file_application_icon(asset) %>
    <%= wopi_button_text(asset, 'edit') %>
  <% end %>
<% end %>
