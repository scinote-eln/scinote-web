        data-visitor-id="<%= "#{request.host}.#{current_user.id}" %>"
        data-visitor-user-email="<%= current_user.email %>"
        data-visitor-user-id="<%= current_user.id %>"
        data-account-id="<%= request.host %>"
        data-api-key="<%= Scinote::App.pendo_id %>"
  >

  <%= javascript_include_tag 'trackers/pendo' %>
<% end %>
