{
  "env": {
    "browser": true,
    "jquery": true,
    "es6": true,
    "node": true
  },
  "extends": ["airbnb", "plugin:vue/base"],
  "rules": {
    "import/extensions": "off",
    "import/no-unresolved": "off",
    "spaced-comment": [
      "error",
      "always",
      {
        "markers": ["="]
      }
    ],
    "lines-around-comment": [
      "warn",
      {
        "beforeLineComment": false
      }
    ],
    "max-len": [
      "error",
      {
        "code": 180
      }
    ],
    "vue/max-len": [
      "error",
      {
        "code": 180,
        "template": 240,
        "tabWidth": 2
      }
    ],
    "comma-dangle": [
      "error",
      "never"
    ]
  },
  "globals": {
    "_": true
  }
}
